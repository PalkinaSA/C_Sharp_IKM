@model C_Sharp_IKM.Models.Event

@{
    ViewData["Title"] = "Редактирование события";
}

<h2>Редактирование события</h2>

<div class="container">
    <form asp-action="Edit" method="post">

        @* 1. Скрытое поле *@
        <input type="hidden" asp-for="Id" />

        @* 2. Поля для изменения *@
        <div class="mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EventDate" class="control-label"></label>
            <input asp-for="EventDate" class="form-control" type="date" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EventType" class="control-label"></label>
            <select asp-for="EventType" class="form-control" asp-items="ViewBag.EventTypes">
                <option value="">-- Выберите тип события --</option>
            </select>
            <span asp-validation-for="EventType" class="text-danger"></span>
        </div>

        @* 3. Кнопки *@
        <div class="mt-4">
            <button type="submit" class="btn btn-success">Сохранить изменения</button>
            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}