@model IEnumerable<C_Sharp_IKM.Models.Ticket>

@{
    ViewData["Title"] = "Билеты";
}

<h2>Список билетов</h2>

@* Кнопка перехода на страницу создания *@
<a asp-action="Create" class="btn btn-success">Добавить новый билет</a>

<table class="table">
    <thead>
        <tr>
            <th>Номер билета</th>
            <th>Сотрудник</th>
            <th>Событие</th>
            <th>Дата продажи</th>
            <th>Тип билета</th>
            <th>Способ оплаты</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @* Цикл: для каждого сотрудника в списке создаем строку таблицы *@
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TicketNumber</td>
                <td>@item.Employee.FullName</td>
                <td>@item.Event.Name</td>
                <td>@item.SaleDate.ToString("dd.MM.yyyy")</td>
                <td>@item.TicketType</td>
                <td>@item.PaymentMethod</td>

                <td>
                    @* Кнопки действий. asp-route-id передает номер билета в контроллер *@
                    <a asp-action="Edit" asp-route-id="@item.TicketNumber" class="btn btn-sm btn-success">Изменить</a>
                    <a asp-action="Details" asp-route-id="@item.TicketNumber" class="btn btn-sm btn-success">Подробно</a>
                    <a asp-action="Delete" asp-route-id="@item.TicketNumber" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>