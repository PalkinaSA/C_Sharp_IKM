@model C_Sharp_IKM.Models.Ticket

@{
    ViewData["Title"] = "Редактирование билета";
}

<h2>Редактирование билета</h2>

<div class="container">
    <form asp-action="Edit" method="post">

        @* 1. Скрытое поле *@
        <input type="hidden" asp-for="TicketNumber" />

        @* 2. Поля для изменения *@
        <div class="mb-3">
            <label asp-for="ServiceNumber" class="control-label">Сотрудник</label>
            <select asp-for="ServiceNumber" class="form-control" asp-items="ViewBag.ServiceNumber">
                <option value="">-- Выберите сотрудника --</option>
            </select>
            <span asp-validation-for="ServiceNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EventId" class="control-label">Событие</label>
            <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId">
                <option value="">-- Выберите событие --</option>
            </select>
            <span asp-validation-for="EventId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="SaleDate" class="control-label"></label>
            <input asp-for="SaleDate" class="form-control" type="date" />
            <span asp-validation-for="SaleDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TicketType" class="control-label"></label>
            <select asp-for="TicketType" class="form-control" asp-items="ViewBag.TicketTypes">
                <option value="">-- Выберите тип билета --</option>
            </select>
            <span asp-validation-for="TicketType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PaymentMethod" class="control-label"></label>
            <select asp-for="PaymentMethod" class="form-control" asp-items="ViewBag.PaymentMethods">
                <option value="">-- Выберите способ оплаты --</option>
            </select>
            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
        </div>

        @* 3. Кнопки *@
        <div class="mt-4">
            <button type="submit" class="btn btn-success">Сохранить изменения</button>
            <a asp-action="Index" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}